<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ErenInfo"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_widget">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/badge" />

        <FrameLayout
            android:layout_marginTop="40dp"
            android:layout_width="330dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/widget_shape_trans"
            android:clipToOutline="true"
            android:clipToPadding="true">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:src="@drawable/eren_jaeger" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:text="EREN JAEGER"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="330dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_height="350dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Eren Jaeger es el protagonista principal de la serie. Es el único hijo de Grisha y Carla Jaeger. A su vez, es el medio hermano menor de Zeke Jaeger, el hermano adoptivo de Mikasa Ackerman y un Titán Cambiante, siendo el último portador del Titán de Ataque, el Titán Fundador y el Titán Martillo de Guerra. Actualmente, sus planes son casi totalmente desconocidos y parece haber traicionado a sus compañeros para salvar a Eldia terminando con el resto de la humanidad." />

    </LinearLayout>
</FrameLayout>