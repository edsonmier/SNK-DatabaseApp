<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeviInfo"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_widget">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/badge" />

        <FrameLayout
            android:layout_marginTop="40dp"
            android:layout_width="330dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/widget_shape_trans"
            android:clipToOutline="true"
            android:clipToPadding="true">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/levi_ackerman" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:text="LEVI ACKERMAN"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="330dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_height="350dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Levi Ackerman, también referido como Capitán Levi, es el capitán del escuadrón de operaciones especiales de la Legión de Reconocimiento, y es conocido como “el soldado más fuerte de la humanidad”. Levi es una persona seria, de carácter firme e ideas claras. Siente un gran respeto por la disciplina y es un conscripto con un enorme potencial para ser líder, pues sus órdenes siempre son claras y precisas. Actualmente, se encuentra herido después de enfrentarse al malévolo Zeke Jaeger." />

    </LinearLayout>
</FrameLayout>